      box-sizing: border-box;
    }
  </style>
  <script>
    // Default konfigurasi untuk elemen Canva
    const defaultConfig = {
      // Warna (maksimal 5, sudah diurutkan dari paling dominan)
      background_color: "#0f172a",     // BACKGROUND - biru tua kehitaman
      surface_color: "#1e293b",        // SECONDARY_SURFACE - panel/kartu
      text_color: "#e5e7eb",           // TEXT - abu muda
      primary_action_color: "#22c55e", // PRIMARY_ACTION - hijau cerah
      secondary_action_color: "#38bdf8", // SECONDARY_ACTION - biru terang

      // Font
      font_family: "Poppins",
      font_size: 16,

      // Teks yang bisa diedit dari Edit Panel
      main_title: "Membiasakan Berpikir Kritis & Semangat Mencintai IPTEK",
      subtitle: "Pendidikan Agama Islam | Kelas XI SMK",
      section_intro_title: "Pendahuluan",
      section_intro_body: "Sebagai muslim, kita diperintahkan untuk menggunakan akal secara maksimal, berpikir kritis, dan memanfaatkan ilmu pengetahuan dan teknologi (IPTEK) untuk kemaslahatan.",
      section_think_title: "Apa Itu Berpikir Kritis dalam Islam?",
      section_iptek_title: "Semangat Mencintai IPTEK",
      quiz_title: "Kuis Interaktif",
      summary_title: "Rangkuman & Refleksi",
      footer_text: "PAI Kelas XI SMK • Materi: Berpikir Kritis & Cinta IPTEK"
    };

    // Simpan referensi elemen DOM global untuk dipakai di onConfigChange
    let domRefs = {};

    // Inisialisasi setelah DOM siap
    document.addEventListener("DOMContentLoaded", () => {
      // Ambil referensi elemen penting
      domRefs = {
        appWrapper: document.getElementById("app-wrapper"),
        mainTitle: document.getElementById("main-title"),
        subtitle: document.getElementById("subtitle"),
        sectionIntroTitle: document.getElementById("section-intro-title"),
        sectionIntroBody: document.getElementById("section-intro-body"),
        sectionThinkTitle: document.getElementById("section-think-title"),
        sectionIptekTitle: document.getElementById("section-iptek-title"),
        quizTitle: document.getElementById("quiz-title"),
        summaryTitle: document.getElementById("summary-title"),
        footerText: document.getElementById("footer-text"),
        // kartu/panel
        introCard: document.getElementById("intro-card"),
        thinkCard: document.getElementById("think-card"),
        iptekCard: document.getElementById("iptek-card"),
        quizCard: document.getElementById("quiz-card"),
        summaryCard: document.getElementById("summary-card"),
        // tombol
        navButtons: document.querySelectorAll("[data-nav]"),
        primaryButtons: document.querySelectorAll("[data-btn='primary']"),
        secondaryButtons: document.querySelectorAll("[data-btn='secondary']")
      };

      // Logika tab navigasi sederhana
      const tabs = document.querySelectorAll("[data-tab-target]");
      const sections = document.querySelectorAll("[data-tab-section]");
      tabs.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab-target");
          tabs.forEach((b) => b.classList.remove("border-b-2", "border-emerald-400", "text-emerald-300"));
          btn.classList.add("border-b-2", "border-emerald-400", "text-emerald-300");
          sections.forEach((sec) => {
            if (sec.getAttribute("data-tab-section") === target) {
              sec.classList.remove("hidden");
            } else {
              sec.classList.add("hidden");
            }
          });
        });
      });

      // Logika kuis
      initQuiz();

      // Inisialisasi Element SDK bila tersedia
      if (window.elementSdk && typeof window.elementSdk.init === "function") {
        window.elementSdk.init({
          defaultConfig,
          onConfigChange: async (config) => {
            applyConfigToUI(config);
          },
          mapToCapabilities: (config) => {
            const cfg = config || defaultConfig;

            const backgroundRecolorable = {
              get: () => cfg.background_color || defaultConfig.background_color,
              set: (value) => {
                cfg.background_color = value;
                window.elementSdk.setConfig({ background_color: value });
              }
            };

            const surfaceRecolorable = {
              get: () => cfg.surface_color || defaultConfig.surface_color,
              set: (value) => {
                cfg.surface_color = value;
                window.elementSdk.setConfig({ surface_color: value });
              }
            };

            const textRecolorable = {
              get: () => cfg.text_color || defaultConfig.text_color,
              set: (value) => {
                cfg.text_color = value;
                window.elementSdk.setConfig({ text_color: value });
              }
            };

            const primaryActionRecolorable = {
              get: () => cfg.primary_action_color || defaultConfig.primary_action_color,
              set: (value) => {
                cfg.primary_action_color = value;
                window.elementSdk.setConfig({ primary_action_color: value });
              }
            };

            const secondaryActionRecolorable = {
              get: () => cfg.secondary_action_color || defaultConfig.secondary_action_color,
              set: (value) => {
                cfg.secondary_action_color = value;
                window.elementSdk.setConfig({ secondary_action_color: value });
              }
            };

            const fontEditable = {
              get: () => cfg.font_family || defaultConfig.font_family,
              set: (value) => {
                cfg.font_family = value;
                window.elementSdk.setConfig({ font_family: value });
              }
            };

            const fontSizeable = {
              get: () => cfg.font_size || defaultConfig.font_size,
              set: (value) => {
                cfg.font_size = value;
                window.elementSdk.setConfig({ font_size: value });
              }
            };

            return {
              recolorables: [
                backgroundRecolorable,
                surfaceRecolorable,
                textRecolorable,
                primaryActionRecolorable,
                secondaryActionRecolorable
              ],
              borderables: [],
              fontEditable,
              fontSizeable
            };
          },
          mapToEditPanelValues: (config) => {
            const cfg = config || defaultConfig;
            return new Map([
              ["main_title", cfg.main_title || defaultConfig.main_title],
              ["subtitle", cfg.subtitle || defaultConfig.subtitle],
              ["section_intro_title", cfg.section_intro_title || defaultConfig.section_intro_title],
              ["section_intro_body", cfg.section_intro_body || defaultConfig.section_intro_body],
              ["section_think_title", cfg.section_think_title || defaultConfig.section_think_title],
              ["section_iptek_title", cfg.section_iptek_title || defaultConfig.section_iptek_title],
              ["quiz_title", cfg.quiz_title || defaultConfig.quiz_title],
              ["summary_title", cfg.summary_title || defaultConfig.summary_title],
              ["footer_text", cfg.footer_text || defaultConfig.footer_text]
            ]);
          }
        });
      }

      // Terapkan defaultConfig bila SDK tidak ada (misalnya preview)
      applyConfigToUI(defaultConfig);
    });

    function applyConfigToUI(config) {
      if (!domRefs || !domRefs.appWrapper) return;
      const cfg = config || defaultConfig;

      const bgColor = cfg.background_color || defaultConfig.background_color;
      const surfaceColor = cfg.surface_color || defaultConfig.surface_color;
      const textColor = cfg.text_color || defaultConfig.text_color;
      const primaryColor = cfg.primary_action_color || defaultConfig.primary_action_color;
      const secondaryColor = cfg.secondary_action_color || defaultConfig.secondary_action_color;
      const fontFamily = cfg.font_family || defaultConfig.font_family;
      const baseFontSize = cfg.font_size || defaultConfig.font_size;

      // Background umum
      domRefs.appWrapper.style.backgroundColor = bgColor;
      domRefs.appWrapper.style.color = textColor;
      domRefs.appWrapper.style.fontFamily = `${fontFamily}, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif`;
      domRefs.appWrapper.style.fontSize = baseFontSize + "px";

      // Skala font sesuai hirarki
      if (domRefs.mainTitle) {
        domRefs.mainTitle.textContent = cfg.main_title || defaultConfig.main_title;
        domRefs.mainTitle.style.fontSize = baseFontSize * 1.9 + "px";
        domRefs.mainTitle.style.color = textColor;
      }
      if (domRefs.subtitle) {
        domRefs.subtitle.textContent = cfg.subtitle || defaultConfig.subtitle;
        domRefs.subtitle.style.fontSize = baseFontSize * 1.1 + "px";
        domRefs.subtitle.style.color = textColor;
      }

      if (domRefs.sectionIntroTitle) {
        domRefs.sectionIntroTitle.textContent = cfg.section_intro_title || defaultConfig.section_intro_title;
        domRefs.sectionIntroTitle.style.fontSize = baseFontSize * 1.3 + "px";
      }
      if (domRefs.sectionIntroBody) {
        domRefs.sectionIntroBody.textContent = cfg.section_intro_body || defaultConfig.section_intro_body;
        domRefs.sectionIntroBody.style.fontSize = baseFontSize * 1.0 + "px";
      }
      if (domRefs.sectionThinkTitle) {
        domRefs.sectionThinkTitle.textContent = cfg.section_think_title || defaultConfig.section_think_title;
        domRefs.sectionThinkTitle.style.fontSize = baseFontSize * 1.3 + "px";
      }
      if (domRefs.sectionIptekTitle) {
        domRefs.sectionIptekTitle.textContent = cfg.section_iptek_title || defaultConfig.section_iptek_title;
        domRefs.sectionIptekTitle.style.fontSize = baseFontSize * 1.3 + "px";
      }
      if (domRefs.quizTitle) {
        domRefs.quizTitle.textContent = cfg.quiz_title || defaultConfig.quiz_title;
        domRefs.quizTitle.style.fontSize = baseFontSize * 1.3 + "px";
      }
      if (domRefs.summaryTitle) {
        domRefs.summaryTitle.textContent = cfg.summary_title || defaultConfig.summary_title;
        domRefs.summaryTitle.style.fontSize = baseFontSize * 1.3 + "px";
      }
      if (domRefs.footerText) {
        domRefs.footerText.textContent = cfg.footer_text || defaultConfig.footer_text;
        domRefs.footerText.style.fontSize = baseFontSize * 0.9 + "px";
      }

      // Warna kartu/panel
      [
        domRefs.introCard,
        domRefs.thinkCard,
        domRefs.iptekCard,
        domRefs.quizCard,
        domRefs.summaryCard
      ].forEach((card) => {
        if (card) {
          card.style.backgroundColor = surfaceColor;
          card.style.borderColor = "#0f172a";
        }
      });

      // Tombol utama
      domRefs.primaryButtons.forEach((btn) => {
        btn.style.backgroundColor = primaryColor;
        btn.style.color = "#0b1120";
      });

      // Tombol sekunder
      domRefs.secondaryButtons.forEach((btn) => {
        btn.style.borderColor = secondaryColor;
        btn.style.color = secondaryColor;
      });

      // Tab teks warna
      const tabButtons = document.querySelectorAll("[data-tab-target]");
      tabButtons.forEach((tab) => {
        tab.style.color = textColor;
      });

      // Ring aksen
      const accentRings = document.querySelectorAll(".accent-ring");
      accentRings.forEach((el) => {
        el.style.borderColor = secondaryColor;
      });
    }

    // ----- KUIS SEDERHANA -----
    function initQuiz() {
      const quizForm = document.getElementById("quiz-form");
      const quizResult = document.getElementById("quiz-result");
      const quizSummary = document.getElementById("quiz-summary");
      if (!quizForm || !quizResult || !quizSummary) return;

      quizForm.addEventListener("submit", function (e) {
        e.preventDefault();

        const answers = {
          q1: "b",
          q2: "a",
          q3: "c",
          q4: "b"
        };

        let score = 0;
        let total = 4;
        const feedbacks = [];

        Object.keys(answers).forEach((key) => {
          const selected = quizForm.querySelector(`input[name="${key}"]:checked`);
          if (selected && selected.value === answers[key]) {
            score++;
          } else {
            // feedback singkat
            if (key === "q1") {
              feedbacks.push("Soal 1: Berpikir kritis dalam Islam selalu disandarkan pada Al-Qur'an dan Sunnah.");
            } else if (key === "q2") {
              feedbacks.push("Soal 2: IPTEK bernilai ibadah bila diniatkan untuk mencari ridha Allah dan kemaslahatan.");
            } else if (key === "q3") {
              feedbacks.push("Soal 3: Sikap kritis bukan berarti suka membantah, tetapi menganalisa dengan sopan dan ilmiah.");
            } else if (key === "q4") {
              feedbacks.push("Soal 4: Semangat mencintai IPTEK diwujudkan dengan belajar sungguh-sungguh dan berkarya.");
            }
          }
        });

        quizResult.innerHTML = "";
        quizSummary.innerHTML = "";

        const percentage = (score / total) * 100;
        let pesan = "";
        if (percentage === 100) {
          pesan = "Masya Allah, jawabanmu sempurna! Pemahamanmu tentang berpikir kritis dan cinta IPTEK sangat baik.";
        } else if (percentage >= 75) {
          pesan = "Bagus! Tinggal sedikit lagi untuk benar-benar menguasai materi ini.";
        } else if (percentage >= 50) {
          pesan = "Cukup baik. Coba baca kembali materi, terutama bagian yang masih keliru.";
        } else {
          pesan = "Ayo semangat! Tidak apa-apa salah, yang penting mau belajar lagi.";
        }

        const scoreDiv = document.createElement("div");
        scoreDiv.className = "mb-2 font-semibold";
        scoreDiv.textContent = `Nilai Kamu: ${score} dari ${total} (≈ ${Math.round(percentage)}%)`;
        quizResult.appendChild(scoreDiv);

        const messageDiv = document.createElement("div");
        messageDiv.className = "mb-2";
        messageDiv.textContent = pesan;
        quizResult.appendChild(messageDiv);

        if (feedbacks.length > 0) {
          const list = document.createElement("ul");
          list.className = "list-disc list-inside space-y-1 text-slate-200";
          feedbacks.forEach((fb) => {
            const li = document.createElement("li");
            li.textContent = fb;
            list.appendChild(li);
          });
          quizSummary.appendChild(list);
        } else {
          const ok = document.createElement("p");
          ok.textContent = "Semua jawabanmu sudah tepat. Pertahankan semangat belajarmu!";
          quizSummary.appendChild(ok);
        }
      });
    }
  </script>
